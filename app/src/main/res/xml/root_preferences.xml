<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="firstname_text"
        app:title="@string/first_name"
        app:useSimpleSummaryProvider="true"
        app:singleLine="true"
        app:maxLines="1"/>

    <EditTextPreference
        app:key="lastname_text"
        app:title="@string/last_name"
        app:useSimpleSummaryProvider="true"
        app:singleLine="true"
        app:maxLines="1"/>

    <SwitchPreference
        app:defaultValue="false"
        app:key="mentor_switch"
        app:title="@string/pref_title_qr_ismentor" />

</PreferenceScreen>
